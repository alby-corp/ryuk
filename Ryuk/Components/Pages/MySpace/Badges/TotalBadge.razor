@using Atlassian.Jira
@using System.Collections.Frozen

@if (Issues is null)
{
        <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
        <MudProgressCircular Color="Color.Secondary" Indeterminate="true" />
    </MudStack>
    return;
}

<MudText Typo="Typo.h6">@($"Issues in the last {MonthsAgo} months")</MudText>
<MudText Typo="Typo.h2" Color="Color.Dark">@_count</MudText>

@code {
    [Parameter] public required FrozenSet<Issue>? Issues { get; set; }
    [Parameter] public required uint MonthsAgo { get; set; }

    int _count;

    protected override void OnParametersSet() => _count = Issues?.Count ?? 0;
}